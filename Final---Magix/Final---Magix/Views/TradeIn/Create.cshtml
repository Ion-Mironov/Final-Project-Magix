@model IEnumerable<Final___Magix.Models.TradeInModel>

@{
    ViewData["Title"] = "Create";
}

<div class="tradein-container">
    <div class="alpha-tradein-wrapper">
        <div class="tradein-greeting-text-image">
            <img src="/Images/tradein_greeting.png" alt="Trade-In Greeting Text">
        </div>

        <form class="tradein-form-wrapper" method="post" asp-action="AddToTradeIn">
            <!-- ********************************* CARD NAME *************************************-->
            <div class="cardNameWrapper">
                <div class="label-with-tooltip">
                    <label for="cardName">Card Name</label>
                    <span class="tooltip-icon" onclick="openTooltip('tooltip-cardName')">?</span>
                </div>
                <div class="tooltip-modal" id="tooltip-cardName">
                    <div class="tooltip-content tooltip-content-box">
                        Search by entering any word(s) found in the card title.<br>
                        Partial matches will also provide results.
                    </div>
                </div>
                <input type="text" id="cardName" name="cardName" required>
                <div class="error-message" style="color: red; display: none;">Invalid card name, please try again.</div>
            </div>
            <!-- ********************************* PRINT     *************************************-->
            <div class="printTypeWrapper">
                <div class="label-with-tooltip">
                    <label for="cardPrint">Print</label>
                    <span class="tooltip-icon" onclick="openTooltip('tooltip-cardPrint')">?</span>
                </div>
                <div class="tooltip-modal" id="tooltip-cardPrint">
                    <div class="tooltip-content tooltip-content-box">
                        Choose the card print from the list
                    </div>
                </div>
                <select id="cardPrint">
                   <!-- Options will be dynamically populated by cardPrintPopulation.js -->
                </select>
            </div>

            <!-- ********************************* CONDITION *************************************-->
            <div class="cardConditionWrapper">
                <div class="label-with-tooltip">
                    <label for="cardCondition">Print</label>
                    <span class="tooltip-icon" onclick="openTooltip('tooltip-cardCondition')">?</span>
                </div>
                <div class="tooltip-modal" id="tooltip-cardCondition">
                    <div class="tooltip-content tooltip-content-box">
                        Choose the card print from the list
                    </div>
                </div>
                <select>
                    <option>Near Mint (NM)</option>
                    <option>Lightly Played (LP)</option>
                    <option>Moderately Played (MP)</option>
                    <option>Heavily Played (HP)</option>
                    <option>Damaged (D)</option>
                </select>
            </div>

            <!-- ********************************* FOIL      *************************************-->
            <!-- ********************************* QUANTITY  *************************************-->


            <div class="tradein-button">
                <button id="add-to-tradein-button" type="submit">Add to Trade-in</button> <!-- Add event listener to Javascript for this button's functionality! -->
            </div>
        </form>

        <div class="tradein-list-wrapper">
            <!--Potentially rename this to container?-->
            <div class="tradein-list">
                <!--Potentially rename this to wrapper?-->
                <ul>
                    <!-- This is where the Javascript will append each new object created from the form -->
                </ul>
            </div>
            <div class="tradein-total">
                TOTAL: $<span id="total-price">0.00</span> <!-- #total-price will get updated by Javascript -->
            </div>
        </div>

        <div class="confirm-tradein-button">
            <button id="confirm-tradein-button" type="submit">Confirm Trade-In</button>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>
<script src="~/js/validation.js"></script>
<script src="~/js/cardPrintPopulation.js"></script>
<script src="~/js/addtotradein.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
